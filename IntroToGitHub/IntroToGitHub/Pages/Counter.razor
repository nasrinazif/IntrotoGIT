@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increase by Three</button>
<button class="btn btn-secondary" @onclick="DecrementCount"> Decrease by One</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount+=3;
    }

    private void DecrementCount()
    {
        currentCount-=1;
    }
}
